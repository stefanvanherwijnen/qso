{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "paths": {
      "@stefanvh/quasar-app-vite": ["./src/index"],
      "@stefanvh/quasar-app-vite/*": ["./src/*"],
    }
  },
  "include": [
    "src"
  ]
}